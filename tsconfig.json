{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"]
	},
	"include": [
		"src/renderer/**/*.ts",
		"src/renderer/**/*.d.ts",
		"src/renderer/**/*.tsx",
		"src/renderer/**/*.vue"
	]
}
